<Context>
    <Resource name="jdbc/yajim" auth="Container"
              type="javax.sql.DataSource" driverClassName="org.postgresql.Driver"
              url="jdbc:postgresql://localhost:5432/yajim"
              username="postgres" password="postgres" maxTotal="20" maxIdle="10"
              maxWaitMillis="-1"/>

    <Resource name="jdbc/world" auth="Container"
              type="javax.sql.DataSource" driverClassName="com.mysql.cj.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/world?serverTimezone=UTC"
              username="root" password="root" maxTotal="20" maxIdle="10"
              maxWaitMillis="-1"/>
</Context>